<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <Button 
        android:id="@+id/btn_add_finance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="记一笔"
        android:textColor="@color/color_add_button_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_add_button"
        android:layout_alignParentBottom="true"
        />
     <View 
         android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/btn_add_finance"
            android:background="@color/color_divider"/>
    
    <com.hb.views.PinnedSectionListView 
	    android:id="@+id/lv_finance_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:headerDividersEnabled="false"
	    android:footerDividersEnabled="false"
	    android:divider="@null"
	    android:layout_above="@id/view_divider"
        android:fadingEdge="none"
        android:overScrollFooter="@null"
        android:listSelector="#00000000"
        android:cacheColorHint="#00000000"
	    />

</RelativeLayout>
