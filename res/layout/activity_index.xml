<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="列表"/>
        
        <LinearLayout 
            android:id="@+id/ll_tab_titlelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/index_tab_bg"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageButton 
                android:id="@+id/ib_tab_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:background="@drawable/selector_index_tab_bg_left"
                android:src="@drawable/selector_index_tab_list"/>
            <ImageButton 
                android:id="@+id/ib_tab_plan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:background="@drawable/selector_index_tab_bg_right"
                android:src="@drawable/selector_index_tab_plan"/>
        </LinearLayout>
        
        <ImageButton 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_set_icon"
            android:padding="10dp"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="toSettingView"/>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_tab_titlelayout"
            android:background="@color/color_divider"/>
    </RelativeLayout>

</LinearLayout>
