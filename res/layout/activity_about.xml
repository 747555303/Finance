        "
		    android:layout_marginLeft="10dp"
		    android:textSize="13sp"/>
        
        
        <TextView 
            android:id="@+id/tv_version"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/version"
		    android:layout_marginLeft="10dp"
		    android:textSize="13sp"/>
    	<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="微信：asshole5"
		    android:layout_marginLeft="10dp"
		    android:textSize="13sp"/>
