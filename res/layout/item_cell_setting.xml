<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView 
        android:id="@+id/tv_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="18sp"
        android:text="dsfd"
        android:textColor="@android:color/darker_gray"/>
    
    
   <com.lnl.finance.widget.FlipImageView
        android:id="@+id/fiv_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/selector_on"
        app:flipDrawable="@drawable/selector_off"
        app:flipDuration="500"
        app:flipInterpolator="@android:anim/overshoot_interpolator"
        app:flipRotations="y"
        app:reverseRotation="true"
        android:visibility="invisible"/>
   
   <TextView 
       android:id="@+id/tv_setting_content"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:layout_margin="10dp"
       android:textSize="19sp"
       android:textColor="@color/header_color_1"
       android:visibility="invisible"/>
</RelativeLayout>
